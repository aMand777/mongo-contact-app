<div class="container mt-3">
  <div class="row">
    <div class="col-md-6 mt-5">
      <h2>Form Ubah Data Contact</h2>
      <!-- pesan error -->
      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <!-- pesan error -->

      <!-- forms start -->
      <form method="POST" action="/contact?_method=PUT">
        <input type="hidden" name="_id" value="<%= contact._id %>"/>
        <input type="hidden" name="oldName" value="<%= contact.oldName || contact.nama %>" />
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input type="text" class="form-control" name="nama" id="nama" required value="<%= contact.nama %>" />
        </div>
        <div class="mb-3">
          <label for="nohp" class="form-label">No Hp</label>
          <input type="text" class="form-control" name="nohp" id="nohp" required value="<%= contact.nohp %>" />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" name="email" id="email" required value="<%= contact.email %>" />
        </div>

        <button type="submit" class="btn btn-primary fw-bold fst-italic fs-6">Ubah</button>
      </form>
      <!-- forms end -->
    </div>
  </div>
</div>
